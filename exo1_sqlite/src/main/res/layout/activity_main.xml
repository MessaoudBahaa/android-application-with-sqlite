<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a new team :"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.011" app:layout_constraintHorizontal_bias="0.497"
            android:id="@+id/textView2"/>
    <TextView
            android:text="Team name :"
            android:layout_width="wrap_content"
            android:layout_height="15dp" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.223"
            app:layout_constraintBaseline_toBaselineOf="@+id/teamNameTextView"/>
    <AutoCompleteTextView
            android:layout_width="173dp"
            android:layout_height="50dp" android:id="@+id/continentTextView"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="16dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/teamNameTextView"/>
    <TextView
            android:text="Team's continent :"
            android:layout_width="wrap_content"
            android:layout_height="15dp" android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.223"
            app:layout_constraintBaseline_toBaselineOf="@+id/continentTextView"/>
    <AutoCompleteTextView
            android:layout_width="170dp"
            android:layout_height="45dp" android:id="@+id/teamNameTextView"
            app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="36dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/continentTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>